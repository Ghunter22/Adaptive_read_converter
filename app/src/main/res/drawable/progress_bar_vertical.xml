<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                android:startColor="#C7C6C6"
                android:centerColor="#C7C6C6"
                android:centerY="0.75"
                android:endColor="#C7C6C6"
                android:angle="180"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="3dip" />
                <gradient
                    android:startColor="#80161616"
                    android:centerColor="#800C0C0C"
                    android:centerY="0.75"
                    android:endColor="#A0363636"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="3dip" />
                <gradient
                    android:startColor="#242323"
                    android:centerColor="#242323"
                    android:centerY="0.75"
                    android:endColor="#242323"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
</layer-list>